#!/bin/bash

# =============================================================================
# Laravel
# =============================================================================


# -----------------------------------------------------------------------------
# Install Laravel and configure
# -----------------------------------------------------------------------------


function laravel () {

    case $1 in
    "install")

        notice_start
        echo 'Installing Laravel'
        notice_end

        composer create-project laravel/laravel $2

    ;;
    esac

}


# -----------------------------------------------------------------------------
# Artisan for Laravel (still need to cd into directory)
# -----------------------------------------------------------------------------

alias artisan='php artisan'